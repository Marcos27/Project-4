<h1>Make a new User</h1>

<%= form_for @user do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :picture_url %>
        <%= f.text_field :picture_url %>
    </div>


    <%= f.submit "ADD ME PLZ!" %>

<% end %>

<%= link_to "Back to the list!", users_path %>
