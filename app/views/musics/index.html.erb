<center>
  <div class="main-box">
    <div class="music-title-box">
      <h1>Music</h1>
    </div>
    <br>
    <div class="index-add-new-song-btn">
      <%= link_to "Add a song", new_music_path %>
    </div>
    <% @musics.each do |music| %>
      <div class="music-post">
        <div id="index-delete-btn">
          <%= link_to "X",  music_path(music), method: :delete, data: { confirm: "Are you sure you want to delete this Song?"} %>
        </div>
        <h1><%= music.artist %></h1>
        <iframe class="video" width="80%" height="350px" src="https://www.youtube.com/embed/<%= music.song_url.split('v=')[1].split('&')[0] %>" frameborder="0" allowfullscreen></iframe>
        <h3><%= music.songs %></h3>
        <h4><%= music.genre %></h4>
        <p><%= music.bio %></p>

        <hr>
      </div>
    <% end %>
    <div class="index-add-new-song-btn">
      <%= link_to "Add a song", new_music_path %>
    </div>
  </div>
</center>
